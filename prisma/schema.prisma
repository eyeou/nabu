generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MasteryLevel {
  NOT_STARTED
  EMERGING
  PROFICIENT
  MASTERED
}

model Teacher {
  id           String    @id @default(uuid())
  email        String    @unique
  passwordHash String
  name         String
  createdAt    DateTime  @default(now())
  programs     Program[]
  classes      Class[]
}

model Program {
  id          String   @id @default(uuid())
  teacherId   String
  title       String
  description String?
  teacher     Teacher  @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  lessons     Lesson[]
}

model Lesson {
  id          String       @id @default(uuid())
  programId   String
  title       String
  description String?
  orderIndex  Int          @default(0)
  testData    String?
  program     Program      @relation(fields: [programId], references: [id], onDelete: Cascade)
  outgoing    LessonLink[] @relation("LessonOutgoing")
  incoming    LessonLink[] @relation("LessonIncoming")
  statuses    StudentLessonStatus[]
}

model LessonLink {
  id           String  @id @default(uuid())
  fromLessonId String
  toLessonId   String
  relationType String
  fromLesson   Lesson  @relation("LessonOutgoing", fields: [fromLessonId], references: [id], onDelete: Cascade)
  toLesson     Lesson  @relation("LessonIncoming", fields: [toLessonId], references: [id], onDelete: Cascade)

  @@index([fromLessonId])
  @@index([toLessonId])
}

model Class {
  id        String    @id @default(uuid())
  teacherId String
  name      String
  teacher   Teacher   @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  students  Student[]
}

model Student {
  id        String    @id @default(uuid())
  classId   String
  name      String
  age       Int
  avatarUrl String?
  class     Class     @relation(fields: [classId], references: [id], onDelete: Cascade)
  statuses  StudentLessonStatus[]
  summaries StudentSummary[]
}

model StudentLessonStatus {
  id           String       @id @default(uuid())
  studentId    String
  lessonId     String
  masteryLevel MasteryLevel @default(NOT_STARTED)
  notes        String?
  student      Student      @relation(fields: [studentId], references: [id], onDelete: Cascade)
  lesson       Lesson       @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  @@unique([studentId, lessonId])
}

model StudentSummary {
  id              String   @id @default(uuid())
  studentId       String
  subject         String
  bulletPointsJson Json
  student         Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([studentId, subject])
}
